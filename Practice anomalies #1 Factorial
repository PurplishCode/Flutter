import 'dart:io';

Factorial Calculation!!
void main() {
  print("Welcome to factorial Calculation!");

  print("Please enter a positive integer: ");
  int number = int.parse(stdin.readLineSync()!);

  int result = calculatedFactorial(number);

  print("Here's your result of $number for Factorial calculation: $result");
}

calculatedFactorial(int n) {
  int factorial = 1;

  for (int i = 0; i <= n; i++) {
    factorial *= i;
  }
  return factorial;
}
